<ui:UiPage
    x:Class="Sysadmin.Views.Pages.ComputersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sysadmin.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Sysadmin.Models"
    xmlns:entities="clr-namespace:SysAdmin.ActiveDirectory.Models;assembly=SysAdmin.ActiveDirectory"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Computers"
    d:DataContext="{d:DesignInstance local:ComputersPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:Background="{DynamicResource ApplicationBackgroundBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="56,0">
        <ListView  ItemsSource="{Binding ViewModel.Computers, Mode=OneWay}">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type entities:ComputerEntry}" >
                        <TextBlock Margin="8,4" Text="{Binding Name}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ui:UiPage>
